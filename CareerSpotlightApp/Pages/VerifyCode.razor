@page "/verify-code"
@using System.ComponentModel.DataAnnotations
@inject HttpClient HttpClient
@inject NavigationManager Navigation

<h3>Verify Code</h3>

<div class="verify-code-container">
    <EditForm Model="verificationModel" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="form-group">
            <label for="email">Email:</label>
            <InputText id="email" @bind-Value="verificationModel.Email" class="form-control" />
        </div>
        <div class="form-group">
            <label for="code">Verification Code:</label>
            <InputText id="code" @bind-Value="verificationModel.Code" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Verify</button>
    </EditForm>
    @if (isSuccess)
    {
        <p>Verification successful! Redirecting to profile page...</p>
    }
    @if (isError)
    {
        <p>Invalid verification code. Please try again.</p>
    }
</div>

@code {
    private VerificationModel verificationModel = new VerificationModel();
    private bool isSuccess = false;
    private bool isError = false;

    private async Task HandleValidSubmit()
    {
        try
        {
            var response = await HttpClient.PostAsJsonAsync("api/email-access/verify-code", verificationModel);
            if (response.IsSuccessStatusCode)
            {
                isSuccess = true;
                isError = false;
                Navigation.NavigateTo("/profile");
            }
            else
            {
                isSuccess = false;
                isError = true;
            }
        }
        catch (Exception)
        {
            isSuccess = false;
            isError = true;
        }
    }

    public class VerificationModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; }
        [Required]
        public string Code { get; set; }
    }
}
